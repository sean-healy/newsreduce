{
	"compilerOptions": {
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"downlevelIteration": true,
		"sourceMap": false,
        "outDir": "dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "declaration": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "baseUrl": "src",
        "paths": {
            ".": [""]
        }
	},
    "include": [
        "test/**.ts",
        "src/**.ts",
        "src/**/**.ts"
    ]
}

